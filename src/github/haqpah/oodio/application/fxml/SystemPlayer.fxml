<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<HBox xmlns:fx="http://javafx.com/fxml/1" alignment="center">
	<children>
		<Button fx:id="playButton" alignment="CENTER_LEFT" contentDisplay="CENTER" mnemonicParsing="false" text=">" textAlignment="CENTER" onAction="#playTrack"/>			
	    <Button fx:id="pauseButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="||" textAlignment="CENTER" onAction="#pauseTrack"/>
	    <Button fx:id="stopButton" alignment="CENTER_RIGHT" contentDisplay="CENTER" mnemonicParsing="false" text="O" textAlignment="CENTER"  onAction="#stopTrack"/>
    </children>
</HBox>